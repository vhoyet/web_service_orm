  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lancer avec debugger",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/main.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
    }
  ]
}
